
@{
    ViewBag.Title = "Index";
}

<style>
    form {
        max-width: 400px;
        margin: 50px auto;
        padding: 20px;
        background: #f7f7f7;
        border-radius: 5px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
    }

    h2 {
        margin: 0 0 20px;
        font-size: 24px;
        font-weight: bold;
        color: #333;
        text-align: center;
    }

    label {
        display: block;
        margin-bottom: 8px;
        font-size: 14px;
        color: #555;
    }

    input[type="text"],
    input[type="password"] {
        width: 100%;
        height: 40px;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ddd;
        font-size: 16px;
        color: #555;
        box-sizing: border-box;
        margin-bottom: 20px;
    }

    button[type="submit"] {
        background: #4CAF50;
        color: #fff;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
    }
</style>
@using (Html.BeginForm("Index", "Login", FormMethod.Post))
{
    <h2>Đăng nhập</h2>
    <label for="username">Tên đăng nhập</label>
    <input type="text" id="username" name="username" required>
    <label for="password">Mật khẩu</label>
    <input type="password" id="password" name="password" required>
    if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }
    <button type="submit">Đăng nhập</button>
}

